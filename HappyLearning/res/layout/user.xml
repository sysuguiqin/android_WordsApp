<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainbackground" >

    <Button
        android:id="@+id/pregisterbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/preturnbtn"
        android:layout_alignBottom="@+id/preturnbtn"
        android:layout_toRightOf="@+id/preturnbtn"
        android:text="注册" />

    <Button
        android:id="@+id/pupdatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pregisterbtn"
        android:layout_alignBottom="@+id/pregisterbtn"
        android:layout_toRightOf="@+id/pregisterbtn"
        android:text="更新" />

    <Button
        android:id="@+id/pexitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pupdatebtn"
        android:layout_alignBottom="@+id/pupdatebtn"
        android:layout_toRightOf="@+id/pupdatebtn"
        android:text="退出" />

    <Button
        android:id="@+id/preturnbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/senglishtv"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:text="返回" />

    <TextView
        android:id="@+id/saccenttv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameet"
        android:layout_alignLeft="@+id/swordtv"
        android:text="会员姓名："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/schinesetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailet"
        android:layout_alignLeft="@+id/saccenttv"
        android:text="联系邮箱："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/passwordet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pregisterbtn"
        android:layout_alignRight="@+id/emailet"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/countet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saccenttv"
        android:layout_alignLeft="@+id/passwordet"
        android:ems="10" />

    <EditText
        android:id="@+id/nameet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/schinesetv"
        android:layout_toRightOf="@+id/preturnbtn"
        android:ems="10" />

    <EditText
        android:id="@+id/emailet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/preturnbtn"
        android:ems="10" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/senglsentv"
        android:layout_toRightOf="@+id/senglishtv" />

    <TextView
        android:id="@+id/senglishtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordet"
        android:layout_alignLeft="@+id/schinesetv"
        android:text="登录密码："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/senglsentv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/schinesetv"
        android:layout_below="@+id/emailet"
        android:text="英语水平:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/swordtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countet"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:text="会员账号："
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>